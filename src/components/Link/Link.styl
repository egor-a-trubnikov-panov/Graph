blue = #3182bd
darkBlue = #1e5477

.Link
  font-size 16px
  line-height 20px
  font-family Roboto, "Helvetica Neue", Helvetica, sans-serif
  color blue
  text-decoration none
  &:active
    color darkBlue
    svg
      fill darkBlue
  &:hover
    text-decoration underline
    .icon
      display inline-block

.icon
  position absolute
  display none
  margin 0
  padding 0
  vertical-align -3px
  svg
    stroke transparent
    fill blue
