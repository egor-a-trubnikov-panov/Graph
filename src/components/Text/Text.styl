.inputWrapper {
  position relative
  width 100%
  height 100%
}

.textarea {
  width 100%
  height 100%
  background transparent
  border none
  font-size: calc(1rem + 1vw);
}

.button {
  position absolute
  right 0
  width 25px
  height 25px
  line-height 15px
  border-radius 50%
  box-shadow 0 4px 8px rgba(0, 0, 0, .5)
  font-size 12px
  color black
  background white
}

.text {
  font-size: calc(1rem + 1vw);
}

.mode_changed {
  border 1px dashed rgba(0, 0, 0, .5)
}

.TextEdit {
  position absolute
  text-overflow ellipsis
}
